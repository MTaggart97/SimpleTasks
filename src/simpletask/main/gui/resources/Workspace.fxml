<BorderPane fx:id="mainBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="simpletask.main.gui.controllers.MainController">
   <center>
      <HBox fx:id="mainHBox" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <VBox alignment="TOP_CENTER">
         <children>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
              <items>
                <Button mnemonicParsing="false" onAction="#showNewCardDialog" text="New..." />
                  <Button mnemonicParsing="false" onAction="#saveWorkspace" text="Save" />
                  <Button mnemonicParsing="false" onAction="#moveHome" text="Home" />
                  <Button mnemonicParsing="false" onAction="#moveUp" text="Up" />
              </items>
            </ToolBar>
            <Text fx:id="workspaceName" strokeType="OUTSIDE" strokeWidth="0.0" text="Workspace Name" textAlignment="CENTER">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
         </children>
      </VBox>
   </top>
   <bottom>
      <SplitPane fx:id="splitPane" dividerPositions="0.333" BorderPane.alignment="CENTER">
        <items>
          <AnchorPane>
               <children>
                  <VBox>
                     <children>
                        <TextField />
                        <TextArea prefColumnCount="2" prefRowCount="3" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <VBox>
                     <children>
                        <TextField />
                        <TextArea prefRowCount="3" wrapText="true" />
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </bottom>
</BorderPane>
